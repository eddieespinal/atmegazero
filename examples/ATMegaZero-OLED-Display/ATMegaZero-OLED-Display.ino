void displayLogo() {
  display.clearDisplay();
  delay(1000);
  display.drawBitmap(0, 0,  atmegazero_logo, 128, 64, WHITE);
  display.display();
  delay(2500);
  display.clearDisplay();
  display.display();
  delay(500);
}

// Initialize the OLED display and show the ATMegaZero logo
void initializeOLEDDisplay() {
  if(!display.begin(SSD1306_SWITCHCAPVCC, 0x3C)) { // Address 0x3C for 128x64
    Serial.println(F("Failed to initialize OLED Display"));
    for(;;); // Don't proceed, loop forever
  }

  // Display the logo on the OLED display
  displayLogo();
}

void setup()
{
  // Initialize the OLED display and show the ATMegaZero Logo
  initializeOLEDDisplay();

  // Display some text on the screen.
  display.setTextSize(1);
  display.setTextColor(WHITE);
  display.setCursor(0,0);
  display.println("OLED Display Demo");
  
